{% extends 'base.html.twig' %}
{% block title %}Contactez-moi{% endblock %}
{% block body %}
<div class="d-flex col-12">

  <div class="">
    <h1 class="ms-3 fs-3 fw-bold mt-3">Contactez-moi ! </h1>
      {{ form_start(form) }}
      <div class='d-flex justify-content-between col-9'>
        <div class='col-2 ms-3'>
        {{ form_row(form.name) }}
        </div>
        <div class='col-4'>
        {{ form_row(form.lastname) }}
        </div>
      </div>
      <div class='ms-3'>
        {{ form_row(form.email) }}
      </div>
      <div class='ms-3 mt-3 col-11'>
        {{ form_row(form.message) }}
      </div>
          <button class="btn text-dark bg-light ms-3 mt-2">{{ button_label|default('Envoyer') }}</button>
      {{ form_end(form) }}
      <h1 class="mt-5"><a class="text-light fs-5 ms-3 mt-5 text-decoration-none fw-bold" href="{{ path('app_index') }}">Retour au site</a></h1>
  </div>
    <div class="d-flex col-6 ms-3 m-3 grid">
      <img clas="rounded-3" src="{{ asset('build/images/Pluie-de-mots-optimised.9749d413.jpg') }}" alt="Aquarelle Pluie de mots">
    </div>
</div>
{% endblock %}