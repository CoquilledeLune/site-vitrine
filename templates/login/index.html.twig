{% extends 'base.html.twig' %}

{% block body %}
<div class="d-flex justify-content-end">
<a class="text-warning fs-5 ms-3 mt-2 me-3" href="{{ path('app_index') }}">Retour au site</a>
</div>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
<h3 class="m-2">ESPACE RESERVE AUX ADMINISTRATEURS</h3>
    <form action="{{ path('app_login') }}" method="post">
    <div class="m-2">
        <label class="d-flex" for="username">Identifiant:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}">

        <label class="d-flex" for="password">Mot de passe:</label>
        <input type="password" id="password" name="_password">

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"> #}

        <button type="submit">login</button>
    </div>
    </form>
{% endblock %}