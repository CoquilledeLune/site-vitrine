{% extends 'base.html.twig' %}

{% block title %}Nouvelle oeuvre{% endblock %}

{% block body %}
<div class="bg-secondary mt-5 col-4 ms-5 pb-2">
    <h3 class="text-light pt-2 ms-5">Ajouter une nouvelle oeuvre</h3>
    <div class="ms-5 mb-3">
        {{ form_start(form) }}
            {{ form_row(form.title) }}
            {{ form_row(form.description) }}
            {{ form_row(form.size) }}
            {{ form_row(form.imageFile) }}
            {{ form_row(form.price) }}
            {{ form_row(form.categories) }}
            <button class="btn">{{ button_label|default('Enregistrer') }}</button>
        {{ form_end(form) }}

            <a class="text-dark text-decoration-none ps-2" href="{{ path('app_creation_index') }}">Retour Ã  la liste</a>
    </div>
</div>
{% endblock %}
